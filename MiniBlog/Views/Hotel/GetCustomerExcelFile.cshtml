@model IEnumerable<EntityLayer.Concrete.Customer>
@{
    ViewBag.Title = "GetCustomerExcelFile";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<head>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>
</head>
<table class="table table-striped table2excel" style="position: center; background-color: lightgray; table-layout: auto;" id="table2excel">
    <tr>
        <th>ID</th>
        <th>İsim</th>
        <th>Email</th>
        <th>Telefon Nr.</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CustomerId</td>
            <td>@item.CustomerName</td>
            <td id="tableDataOverFlow">@item.Mail</td>
            <td>@item.PhoneNumber</td>
        </tr>
    }


</table>

<!--Uyeler tablosunu excel formatina cevirir-->
<script>
    $("#table2excel").table2excel({
        exclude: ".noExl",
        name: "Worksheet Name",
        filename: "musteriBilgileri",//do not include extension
        fileext: ".xls" // file extension
    });
    window.addEventListener('load', function () {
        window.location.href = '/Hotel/AdminCustomerList/';
    })
</script>