@model EntityLayer.Concrete.Contact
@{
    ViewBag.Title = "AddContact";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Bize ulaşın</h1>
                    <h2>+90 (123) 456-7890</h2>
                    <p class="lead mb-4 text-white">Önerileriniz, talepleriniz, yaşadığınız problemler ve diğer tüm durumlar için bir telefon, mesaj uzağınızdayız!!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-5">



                <form method="post" class="p-5 bg-white">
                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">İsim</label>
                            <input type="text" id="fname" name="Name" onkeypress="return isNumericKey(event)" oninput="this.value = trim(this.value)" maxlength="30" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">Soyad</label>
                            <input type="text" id="lname" name="Surname" onkeypress="return isNumericKey(event)" oninput="this.value = trim(this.value)" maxlength="30" class="form-control" required>
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="email">Email</label>
                            <input type="email" id="email" name="Mail" maxlength="50" class="form-control" required>
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="subject">Konu</label>
                            <input type="text" minlength="3"  name="Subject" class="form-control" required>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" minlength="30" maxlength="1000" for="message">Mesaj</label>
                            <textarea name="Message" id="message" cols="30" rows="7" class="form-control" placeholder="Mesajınızı buraya yazabilirsiniz..." required></textarea>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Mesajı gönder" class="btn btn-primary py-2 px-4 text-white">
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-5">

                <div class="p-4 mb-3 bg-white">
                    <p class="mb-0 font-weight-bold">Adres</p>
                    <p class="mb-4">Bizim Mahalle</p>

                    <p class="mb-0 font-weight-bold">Telefon Numarası</p>
                    <p class="mb-4"><a href="#">+90 (123) 456-7890</a></p>

                    <p class="mb-0 font-weight-bold">Email Adresimiz</p>
                    <p class="mb-0"><a href="#">info.tau.hotel@gmail.com</a></p>

                </div>

            </div>
        </div>
    </div>
</div>

@Html.Action("Footer", "About")

