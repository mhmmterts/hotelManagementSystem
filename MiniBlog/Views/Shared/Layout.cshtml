
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Mini Blog</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,700|Playfair+Display:400,700,900" rel="~/miniblog/stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/miniblog/fonts/icomoon/style.css">

    @*<link rel="stylesheet" href="~/miniblog/css/bootstrap.min.css">*@
    <link rel="stylesheet" href="~/miniblog/css/magnific-popup.css">
    <link rel="stylesheet" href="~/miniblog/css/jquery-ui.css">
    <link rel="stylesheet" href="~/miniblog/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/miniblog/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/miniblog/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/miniblog/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/miniblog/css/aos.css">
    <link rel="stylesheet" href="~/miniblog/css/style.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Admin/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/Admin/plugins/fontawesome-free/css/all.min.css">
    <style>
        a {
            color: black;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            @if (ViewBag.number == 1)
            {
                <a class="navbar-brand" href="/Blog/Index">Blog</a>
            }
            else
            {
                <a class="navbar-brand" href="/Hotel/Index">TAU Hotel</a>
            }
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">

                    @if (ViewBag.number == 1)
                    {
                        <li class="nav-link"><a href="/Hotel/Index">Ana Sayfa</a></li>
                        <li class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" style="color: black; background-color: #f7f7f0; border-color: #f7f7f0 " type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Kategoriler
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                @foreach (var item in ViewBag.blogs)
                                {
                                    <a class="dropdown-item" href="/Blog/BlogByCategory/@item.CategoryID">@item.CategoryName</a>
                                }
                            </div>
                        </li>
                    }
                    else
                    {
                        if (!this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-link"><a href="/Login/CustomerLogin">Giriş Yap</a></li>
                        }
                        else
                        {
                            if (!User.IsInRole("A"))
                            {
                                <li class="nav-link"><a href="/Panel/Index">Kullanıcı Paneli</a></li>
                            }
                        }
                        <li class="nav-link"><a href="/Hotel/BookPackage">Rezervasyon</a></li>
                        <li class="nav-link"><a href="/Blog/Index">Blog</a></li>
                        <li class="nav-link"><a href="/About/Index/">Hakkımızda</a></li>
                        <li class="nav-link"><a href="/Contact/AddContact/">İletişim</a></li>
                        if (this.User.Identity.IsAuthenticated && !User.IsInRole("A"))
                        {
                            <li class="nav-link"><a href="/Login/LogOut">Çıkış Yap</a></li>
                        }
                    }

                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/LayoutPanel.js"></script>
    <script src="~/Scripts/input.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Admin/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Admin/dist/js/demo.js"></script>
    <script src="~/Scripts/popper.js"></script>

</body>
</html>